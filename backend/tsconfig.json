{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
   "baseUrl": "./src",
    "paths": {
       "@/*": ["*"], 
      "@utils/*": ["utils/*"],
      "@controllers/*": ["controllers/*"],
      "@models/*": ["models/*"],
      "@config/*": ["config/*"],
      "@routes/*": ["routes/*"],
      "@middlewares/*": ["middlewares/*"],
      "@types/*": ["types/*"]
    },
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
